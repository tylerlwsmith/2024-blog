{{ define "main" }}
  {{ template "_header.tmpl" . }}


  <h1>Posts</h1>
  <ul>
    {{ range (index .Data "posts") }}
      <li>
        <a href="/posts/{{ .Slug }}">
          {{ .Title.Rendered }}
        </a>
        <time datetime="{{ .Date.Format "2006-01-02" }}">
          {{ .Date.Format "January 2, 2006" }}
        </time>
      </li>
    {{ end }}
  </ul>

  <h2>Tags</h2>
  <ul>
    {{ range (index .Data "tags") }}
      <li>
        {{ .Name }}
        ({{ .Count }})
      </li>
    {{ end }}
  </ul>

  {{ template "_footer.tmpl" . }}
{{ end }}
