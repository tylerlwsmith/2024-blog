{{- define "main" }}
  {{- $tagIdMap := index .Data "tagIdMap" }}
  {{- $posts := index .Data "posts" }}


  <div class="container">
    {{- with index .Data "tag" }}
      <h1>Tag: {{ .Name }}</h1>

      {{- if (gt (len $posts) 0) }}
        {{- template "_post-list.tmpl" (args $posts $tagIdMap) }}
      {{- end }}
    {{- end }}
  </div>
{{- end }}
